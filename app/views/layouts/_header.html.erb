<header class="navbar navbar-fixed-top navbar-default">
  <div class="container">
    <%= link_to "BodyBuilding App", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right navbar-default">
        <li><%= link_to "トップへ", root_path(current_user) %></li>
        <% if logged_in? && current_user.admin? %>
          <li><%= link_to "ユーザ一覧", users_path %></li>
          <li><%= link_to "基本情報修正", edit_basic_info_user_path(current_user) %></li>
        <% end %>
        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= @user.name %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <% if current_user.admin == false %>
                <li><%= link_to "月次管理表", user_days_path(current_user) %></li>
              <% end %>
                <li><%= link_to "設定", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "ログアウト", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>