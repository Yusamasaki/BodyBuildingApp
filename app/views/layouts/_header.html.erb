<header class="navbar navbar-fixed-top navbar-default">
  <div class="container">
    <%= link_to "BodyBuilding App", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right navbar-default">
        <li><%= link_to "トップへ", root_path(current_user) %></li>
        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.name %> <b class="caret"></b>
            </a>  
            <ul class="dropdown-menu">
                <li><%= link_to "マイページ", user_days_path(current_user) %></li>
                <li><%= link_to "設定", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "ログアウト", logout_path, method: :delete %>
              </li>
              <li><%= link_to "アカウント削除", user_path(current_user), method: :delete,
                      data: { confirm: "#{current_user.name}のアカウントを削除してよろしいですか？" }, class: "logout" %></li>
            </ul>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>