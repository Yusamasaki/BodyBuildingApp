<% provide(:class_text, 'new') %>
<% provide(:button_text, '追加') %>

<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <h1 class="modal-title">拠点情報追加</h1>
    </div>
    <div class="modal-body">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= form_with(scope: :bases, url: bases_update_path, local: true, method: :patch) do |f| %>
      
            <%= f.label :basename, class: "label-#{yield(:class_text)}" %>
            <%= f.text_field :basename, class: "form-control" %>
                
            <%= f.label :baseinfo, class: "label-#{yield(:class_text)}" %>
            <%= f.text_field :baseinfo, class: "form-control" %>
                
            <div class="center">
              <%= f.submit yield(:button_text), class: "btn btn-primary btn-#{yield(:class_text)}" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>